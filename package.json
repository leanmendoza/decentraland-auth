{
  "name": "@dcl/auth-site",
  "description": "Auth website",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp dist/index.html dist/404.html",
    "prebuild": "node scripts/prebuild.cjs",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "preview": "vite preview",
    "lint": "eslint -c .eslintrc.cjs --ext .ts src",
    "check:code": "eslint -c .eslintrc.cjs src",
    "fix:code": "npm run check:code -- --fix",
    "pre-commit:fix:code": "eslint -c .eslintrc.cjs --fix",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/auth.git"
  },
  "dependencies": {
    "@dcl/crypto": "^3.4.5",
    "@dcl/schemas": "^9.8.0",
    "@dcl/single-sign-on-client": "^0.1.0",
    "@dcl/ui-env": "^1.4.0",
    "@magic-ext/oauth": "^15.1.1",
    "ajv": "^8.12.0",
    "classnames": "^2.3.2",
    "decentraland-connect": "^5.2.1",
    "decentraland-ui": "^4.27.7",
    "ethers": "^6.8.0",
    "magic-sdk": "^21.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.17.0"
  },
  "devDependencies": {
    "@dcl/eslint-config": "^1.1.12",
    "@swc/core": "^1.3.96",
